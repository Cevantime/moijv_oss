{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Modiciation profil{% endblock %}

{% block body %}

<section>
    <h2 class="my-4">Modification</h2>

    {{ form_start(updateForm) }}
        {{ form_row(updateForm.avatarFile, {
            label: 'Votre avatar'
        }) }}
        {{ form_row(updateForm.email) }}
        {{ form_row(updateForm.plainPassword.first, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(updateForm.plainPassword.second, {
            label: 'Veuillez confirmer votre mot de passe'
        }) }}
        {{ form_row(updateForm.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(updateForm.lastname, {
            label: 'Nom'
        }) }}
        {{ form_row(updateForm.description, {
            label: 'Veuillez vous décrire en quelques lignes'
        }) }}

        <p><button type="submit" class="btn btn-primary">Modifier</button></p>
    {{ form_end(updateForm) }}
</section>
{% endblock %}
